    <h2>Blog</h2>
    <!--show all blog posts with ability to edit and delete each post-->
    <% @blogs.each do |blog| %>
        <p><strong>Title > </strong><%= blog.title %></p>
        <p><strong>Content > </strong><%= blog.content %></p>
        <%= link_to "Edit", blog_path(blog) %>
        <%= link_to "Delete", blog_path(blog), method: :delete, :confirm => "Are you sure?" %>
        <br>
    <% end %>
        
    <h2>New Entry</h2>
        <!--build form: form_for blog, link to blog-->
        <%= form_for :blog, url: blogs_path do |form| %>
            <p>
            <%= form.label :Title %><br>
            <%= form.text_area :title, :cols => 80, :rows => 1 %>
            </p>
            
            <p>
            <%=form.label :Content %><br>
            <%= form.text_area :content, :cols => 80, :rows => 3 %>
            </p>
            
            <%= form.submit %>
        <% end %>
</div>
